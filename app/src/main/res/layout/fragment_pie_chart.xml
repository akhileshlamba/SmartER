<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akhileshlamba.smarter.PieChartFragment">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setButton"
        android:layout_marginTop="27dp">

    </com.github.mikephil.charting.charts.PieChart>

    <Button
        android:id="@+id/pickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:text="Select Date" />

    <TextView
        android:id="@+id/pieDate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/setButton"
        android:layout_alignBottom="@+id/setButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:text="Date" />

    <Button
        android:id="@+id/setButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pickDate"
        android:layout_alignBottom="@+id/pickDate"
        android:layout_centerHorizontal="true"
        android:text="View Report" />

</RelativeLayout>
