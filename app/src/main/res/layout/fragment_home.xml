<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.akhileshlamba.smarter.HomeFragment"
    tools:showIn="@layout/app_bar_home">

    <TextClock
        android:id="@+id/clockID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageTempID"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="170dp" />

        <TextView
            android:id="@+id/tempID"
            android:layout_width="173dp"
            android:layout_height="68dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="Temperature"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="170dp" />

    </LinearLayout>

    <Button
        android:id="@+id/usageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Usage" />

    <Button
        android:id="@+id/serverButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add To Server" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/usageImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/usageText"
            android:layout_width="173dp"
            android:layout_height="68dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="Text"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="170dp" />
    </LinearLayout>

</LinearLayout>
